{
  "name": "@luomor-web/eslint-config-monorepo",
  "version": "1.0.7",
  "private": true,
  "author": "luomor-web <xuj_power@qq.com> (https://github.com/luomor-web)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:check": "pnpm lint:fix",
    "release:version": "bumpp package.json packages/*/package.json --execute=\"pnpm changelog\" --all",
    "release:publish": "pnpm publish -r --access public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@luomor-web/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.25.0",
    "typescript": "^4.8.4"
  }
}
